# =============================================================================
# Development Environment Configuration for ThermoCalcBot
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_DEV_BOT_TOKEN_HERE
TELEGRAM_BOT_USERNAME=ThermoCalcDevBot
TELEGRAM_MODE=polling

# Performance Configuration (relaxed for development)
MAX_CONCURRENT_USERS=10
REQUEST_TIMEOUT_SECONDS=120
MESSAGE_MAX_LENGTH=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Handling Configuration
ENABLE_FILE_DOWNLOADS=true
AUTO_FILE_THRESHOLD=2000  # Снижен для тестирования
FILE_CLEANUP_HOURS=1      # Быстрая очистка для разработки
MAX_FILE_SIZE_MB=20
TEMP_FILE_DIR=temp/telegram_files

# Admin Configuration
TELEGRAM_ADMIN_USER_ID=YOUR_DEV_USER_ID_HERE
LOG_BOT_ERRORS=true

# Feature Flags (debug enabled)
ENABLE_USER_AUTH=false
ENABLE_ANALYTICS=true
ENABLE_PROGRESS_INDICATORS=true

# Logging Configuration (verbose for development)
LOG_LEVEL=DEBUG
LOG_REQUESTS=true
LOG_RESPONSES=true

# Database Configuration (development database)
DB_PATH=data/thermo_data_dev.db
STATIC_DATA_DIR=data/static_compounds

# LLM Configuration
OPENROUTER_API_KEY=sk-or-v1-YOUR_DEV_API_KEY
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# Development-specific settings
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_SQL_LOGGING=true
ENABLE_PERFORMANCE_PROFILING=true

# Relaxed timeouts for debugging
LLM_TIMEOUT_SECONDS=60
SQL_EXECUTION_TIMEOUT_SECONDS=60