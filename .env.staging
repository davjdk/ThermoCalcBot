# =============================================================================
# Staging Environment Configuration for ThermoCalcBot
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_STAGING_BOT_TOKEN_HERE
TELEGRAM_BOT_USERNAME=ThermoCalcStagingBot
TELEGRAM_MODE=webhook
TELEGRAM_WEBHOOK_URL=https://staging.your-domain.com/webhook/telegram

# Performance Configuration (production-like but smaller scale)
MAX_CONCURRENT_USERS=50
REQUEST_TIMEOUT_SECONDS=60
MESSAGE_MAX_LENGTH=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# File Handling Configuration
ENABLE_FILE_DOWNLOADS=true
AUTO_FILE_THRESHOLD=3000
FILE_CLEANUP_HOURS=6
MAX_FILE_SIZE_MB=20
TEMP_FILE_DIR=temp/telegram_files

# Admin Configuration
TELEGRAM_ADMIN_USER_ID=YOUR_STAGING_ADMIN_ID_HERE
LOG_BOT_ERRORS=true

# Feature Flags (production-like)
ENABLE_USER_AUTH=true
ENABLE_ANALYTICS=true
ENABLE_PROGRESS_INDICATORS=true

# Logging Configuration (production-like)
LOG_LEVEL=INFO
LOG_REQUESTS=true
LOG_RESPONSES=false  # Уменьшаем логирование в staging

# Database Configuration (staging database)
DB_PATH=data/thermo_data_staging.db
STATIC_DATA_DIR=data/static_compounds

# LLM Configuration
OPENROUTER_API_KEY=sk-or-v1-YOUR_STAGING_API_KEY
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# Staging-specific settings
ENABLE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_VALIDATION=true

# Production-like timeouts
LLM_TIMEOUT_SECONDS=30
SQL_EXECUTION_TIMEOUT_SECONDS=30

# SSL/TLS Configuration
VERIFY_SSL=true
USE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/staging-cert.pem
SSL_KEY_PATH=/etc/ssl/private/staging-key.pem