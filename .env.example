# =============================================================================
# Environment Configuration Template for ThermoCalcBot
# =============================================================================
# СКОПИРУЙТЕ ЭТОТ ФАЙЛ В .env И ЗАПОЛНИТЕ ВАШИМИ ДАННЫМИ
# =============================================================================

# =============================================================================
# Telegram Bot Configuration (ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ!)
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_MODE=polling
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_CONCURRENT_USERS=20
REQUEST_TIMEOUT_SECONDS=60
MESSAGE_MAX_LENGTH=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# =============================================================================
# File Handling Configuration
# =============================================================================
ENABLE_FILE_DOWNLOADS=true
AUTO_FILE_THRESHOLD=3000
FILE_CLEANUP_HOURS=24
MAX_FILE_SIZE_MB=20
TEMP_FILE_DIR=temp/telegram_files

# =============================================================================
# Admin Configuration
# =============================================================================
TELEGRAM_ADMIN_USER_ID=123456789
LOG_BOT_ERRORS=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_USER_AUTH=false
ENABLE_ANALYTICS=true
ENABLE_PROGRESS_INDICATORS=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_REQUESTS=true
LOG_RESPONSES=true

# =============================================================================
# Database Configuration
# =============================================================================
DB_PATH=data/thermo_data.db
STATIC_DATA_DIR=data/static_compounds

# =============================================================================
# LLM Configuration (ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ!)
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# =============================================================================
# Security Configuration
# =============================================================================
VERIFY_SSL=true
MAX_REQUEST_SIZE_MB=10
ENABLE_REQUEST_VALIDATION=true

# =============================================================================
# Monitoring Configuration (опционально)
# =============================================================================
ENABLE_MONITORING=false
ENABLE_METRICS=false
ALERT_WEBHOOK_URL=
ALERT_EMAIL=

# =============================================================================
# Инструкции по настройке:
# =============================================================================
# 1. Создайте Telegram бота через @BotFather и получите токен
# 2. Получите API ключ для OpenRouter: https://openrouter.ai/
# 3. Укажите ваш Telegram user ID для административных функций
# 4. Для production режима настройте webhook URL
# 5. Настройте переменные мониторинга при необходимости
# =============================================================================
