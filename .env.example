# Конфигурация ThermoSystem Telegram Bot
# Скопируйте этот файл в .env и заполните значениями

# Токен Telegram бота (ОБЯЗАТЕЛЬНО)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM API конфигурация (ОБЯЗАТЕЛЬНО)
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=openai/gpt-4o

# База данных ThermoSystem
DB_PATH=data/thermo_data.db
STATIC_CACHE_DIR=data/static_compounds

# Директории
TEMP_FILE_DIR=temp/telegram_files
TELEGRAM_SESSION_LOG_DIR=logs/telegram_sessions

# Логирование
LOG_LEVEL=INFO

# Параметры бота
MAX_CONCURRENT_USERS=20
REQUEST_TIMEOUT_SECONDS=90
BOT_TIMEOUT_SECONDS=30

# Файлы
MAX_FILE_SIZE_MB=20
FILE_CLEANUP_HOURS=24

# Сообщения
MAX_MESSAGE_LENGTH=4096
RESPONSE_FORMAT_THRESHOLD=3000

# Rate limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_BURST=5