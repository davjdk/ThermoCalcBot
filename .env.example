# =============================================================================
# ThermoCalcBot - Конфигурация для развертывания
# =============================================================================
# СКОПИРУЙТЕ ЭТОТ ФАЙЛ В .env И ЗАПОЛНИТЕ ВАШИМИ ДАННЫМИ
# Документация по развертыванию: docs/VPS_DEPLOYMENT.md
# =============================================================================

# =============================================================================
# Telegram Bot Configuration (ОБЯЗАТЕЛЬНО!)
# =============================================================================

# Токен вашего бота (получите через @BotFather в Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Username бота (без @)
TELEGRAM_BOT_USERNAME=YourBotUsername

# Режим работы: polling (рекомендуется для VPS)
TELEGRAM_MODE=polling

# =============================================================================
# LLM API Configuration (ОБЯЗАТЕЛЬНО!)
# =============================================================================

# API ключ OpenRouter (получите на https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Базовый URL для LLM API
LLM_BASE_URL=https://openrouter.ai/api/v1

# Модель по умолчанию
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# =============================================================================
# Performance Configuration (оптимизация для VPS с 512MB RAM)
# =============================================================================

# Максимальное количество одновременных пользователей
# Для VPS 512MB: рекомендуется 5-10
# Для VPS 1GB+: можно увеличить до 20-50
MAX_CONCURRENT_USERS=10

# Таймаут обработки запроса (секунды)
REQUEST_TIMEOUT_SECONDS=60

# Максимальная длина сообщения Telegram
MESSAGE_MAX_LENGTH=4000

# Ограничение запросов в минуту на пользователя
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# =============================================================================
# File Handling Configuration
# =============================================================================

# Включить отправку файлов (отключите для экономии памяти)
ENABLE_FILE_DOWNLOADS=true

# Порог для автоматической генерации файлов (символов)
AUTO_FILE_THRESHOLD=3000

# Очистка временных файлов (часы)
FILE_CLEANUP_HOURS=24

# Максимальный размер файла (MB)
MAX_FILE_SIZE_MB=20

# Директория временных файлов
TEMP_FILE_DIR=temp/telegram_files

# =============================================================================
# Database Configuration
# =============================================================================

# Путь к базе данных термодинамических данных
DB_PATH=data/thermo_data.db

# =============================================================================
# Logging Configuration
# =============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Отладочный режим (включайте только для разработки)
DEBUG=false

# =============================================================================
# Agent Timeouts
# =============================================================================

# Таймаут оркестратора (секунды)
ORCHESTRATOR_TIMEOUT_SECONDS=120

# Таймаут поиска (секунды)
INDIVIDUAL_SEARCH_TIMEOUT_SECONDS=100

# Таймаут SQL запросов (секунды)
SQL_EXECUTION_TIMEOUT_SECONDS=30

# =============================================================================
# Инструкции по настройке:
# =============================================================================
# 
# БЫСТРЫЙ СТАРТ:
# 1. Скопируйте этот файл: cp .env.example .env
# 2. Получите TELEGRAM_BOT_TOKEN через @BotFather в Telegram
# 3. Получите OPENROUTER_API_KEY на https://openrouter.ai/
# 4. Заполните эти два параметра в .env
# 5. Запустите: uv run python telegram_bot.py
