# =============================================================================
# Production Environment Configuration for ThermoCalcBot
# =============================================================================

# Telegram Bot Configuration (ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ!)
TELEGRAM_BOT_TOKEN=YOUR_PRODUCTION_BOT_TOKEN_HERE
TELEGRAM_BOT_USERNAME=ThermoCalcBot
TELEGRAM_MODE=webhook
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# Performance Configuration (optimized for production)
MAX_CONCURRENT_USERS=100
REQUEST_TIMEOUT_SECONDS=45
MESSAGE_MAX_LENGTH=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# File Handling Configuration
ENABLE_FILE_DOWNLOADS=true
AUTO_FILE_THRESHOLD=3000
FILE_CLEANUP_HOURS=12  # Агрессивная очистка
MAX_FILE_SIZE_MB=20
TEMP_FILE_DIR=temp/telegram_files

# Admin Configuration
TELEGRAM_ADMIN_USER_ID=YOUR_PRODUCTION_ADMIN_ID_HERE
LOG_BOT_ERRORS=true

# Feature Flags (security and performance optimized)
ENABLE_USER_AUTH=true
ENABLE_ANALYTICS=true
ENABLE_PROGRESS_INDICATORS=false  # Уменьшаем шум в production

# Logging Configuration (production optimized)
LOG_LEVEL=INFO
LOG_REQUESTS=true
LOG_RESPONSES=false  # Уменьшаем логирование для производительности

# Database Configuration (production database)
DB_PATH=data/thermo_data.db
STATIC_DATA_DIR=data/static_compounds

# LLM Configuration
OPENROUTER_API_KEY=sk-or-v1-YOUR_PRODUCTION_API_KEY
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# Production-specific settings
ENABLE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_VALIDATION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_ID_TRACKING=true

# Optimized timeouts for production
LLM_TIMEOUT_SECONDS=25
SQL_EXECUTION_TIMEOUT_SECONDS=25

# SSL/TLS Configuration
VERIFY_SSL=true
USE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=https://your-domain.com
MAX_REQUEST_SIZE_MB=10
ENABLE_REQUEST_VALIDATION=true

# Monitoring and Alerting
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=60
ENABLE_ERROR_ALERTS=true
ALERT_WEBHOOK_URL=https://your-monitoring-system.com/webhook
ALERT_EMAIL=admin@your-domain.com

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup/thermo-bot

# Performance Tuning
ENABLE_CONNECTION_POOLING=true
MAX_DB_POOL_SIZE=20
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300

# Resource Limits
MEMORY_LIMIT_MB=512
CPU_LIMIT_CORES=2
MAX_CONCURRENT_REQUESTS=200