TELEGRAM_BOT_TOKEN=8556976404:AAH_Zxj-yWY9DRSWQVcn5FOq03_mgIim80o
TELEGRAM_BOT_USERNAME=ThermoCalcBot

# Webhook configuration (для production режима)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_MODE=polling  # polling или webhook

# =============================================================================
# Performance Configuration
# =============================================================================

# Консервативные лимиты для стабильной работы
MAX_CONCURRENT_USERS=20
REQUEST_TIMEOUT_SECONDS=60
MESSAGE_MAX_LENGTH=4000
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# =============================================================================
# File Handling Configuration
# =============================================================================

# Включить скачивание файлов
ENABLE_FILE_DOWNLOADS=true

# Порог символов для автоматической отправки файла
AUTO_FILE_THRESHOLD=3000

# Автоочистка временных файлов через 24 часа
FILE_CLEANUP_HOURS=24

# Максимальный размер файла (лимит Telegram Bot API)
MAX_FILE_SIZE_MB=20

# Директория для временных файлов
TEMP_FILE_DIR=temp/telegram_files

# =============================================================================
# Admin Configuration
# =============================================================================

# ID администратора бота (для получения уведомлений об ошибках)
TELEGRAM_ADMIN_USER_ID=123456789

# Отправлять ошибки администратору
LOG_BOT_ERRORS=true

# =============================================================================
# Feature Flags
# =============================================================================

# Аутентификация пользователей (для production)
ENABLE_USER_AUTH=false

# Аналитика использования
ENABLE_ANALYTICS=true

# Индикаторы прогресса для долгих операций
ENABLE_PROGRESS_INDICATORS=true

# =============================================================================
# Logging Configuration
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Логировать входящие запросы
LOG_REQUESTS=true

# Логировать исходящие ответы
LOG_RESPONSES=true

# =============================================================================
# Database Configuration
# =============================================================================

# Путь к термодинамической базе данных
DB_PATH=data/thermo_data.db

# Директория со статическими данными (YAML кэш)
STATIC_DATA_DIR=data/static_compounds

# =============================================================================
# LLM Configuration (для интеграции с ThermoSystem)
# =============================================================================

# API ключ для OpenRouter
OPENROUTER_API_KEY=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

# URL OpenRouter API
LLM_BASE_URL=https://openrouter.ai/api/v1

# Модель LLM по умолчанию
LLM_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1

# =============================================================================
# Дополнительные параметры безопасности
# =============================================================================

# Максимальное количество соединений с базой данных
MAX_DB_CONNECTIONS=10

# Проверять SSL сертификаты для HTTPS запросов
VERIFY_SSL=true

# Лимит размера сообщения от пользователя (байты)
MAX_INCOMING_MESSAGE_SIZE=4096

# Таймаут для операций с файлами (секунды)
FILE_OPERATION_TIMEOUT=30

# =============================================================================
# Мониторинг и метрики
# =============================================================================

# Включить сбор метрик производительности
ENABLE_METRICS=true

# Интервал сохранения метрик (секунды)
METRICS_SAVE_INTERVAL=300

# Максимальное количество записей метрик в памяти
MAX_METRICS_MEMORY=10000